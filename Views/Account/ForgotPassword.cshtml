@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="login-bg-full"></div>

<div class="forgot-panel-right">
    <div class="forgot-content">
        <h1 class="forgot-title">Forgot<br />Password</h1>
        <p class="forgot-subtext">
            Enter your email address and we’ll send you a link to reset your password.
        </p>

        <form asp-action="ForgotPassword" method="post">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required />
            </div>

            <button type="submit" class="btn-login">Send Reset Link</button>

            @if (ViewBag.Message != null)
            {
                <p class="success-message">@ViewBag.Message</p>
            }
            @if (ViewBag.Error != null)
            {
                <p class="error-message">@ViewBag.Error</p>
            }

            <div class="back-to-login">
                <a asp-action="Login" asp-controller="Account">← Back to Login</a>
            </div>
        </form>
    </div>
</div>
