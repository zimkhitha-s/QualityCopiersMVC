@model List<INSY7315_ElevateDigitalStudios_POE.Models.Invoice>

@{
    ViewBag.Title = "Invoices";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/quotations-styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://fonts.cdnfonts.com/css/agrandir" rel="stylesheet">
</head>
<body>

    <!-- main content -->
    <main class="main-content">
        <div class="content-header">
            <h1 class="page-title">Invoices</h1>
            <div class="header-actions">
                <div class="search-container">
                    <input type="text" id="invoiceSearch" class="search-input" placeholder="Search invoices ...">
                    <a class="search-icon">
                        <img src="~/images/search.png" width="10" height="10">
                    </a>
                </div>
            </div>
        </div>

        <div class="action-buttons">
            <button class="btn btn-secondary" onclick="showFilterModal()">
                <a class="btn-icon">
                    <img src="~/images/filter-btn.png" width="20" height="20">
                </a>
                Filter
            </button>
        </div>

        <div class="table-container">

            @Html.AntiForgeryToken()

                <table class="quotations-table">
                    <thead>
                        <tr>
                            <th>Client Name</th>
                            <th>Mobile</th>
                            <th>Email</th>
                            <th>Date of Invoice</th>
                            <th>Invoice Number</th>
                            <th>Status</th>
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                    {
                        @foreach (var invoice in Model)
                        {
                            var isUnpaid = !string.IsNullOrEmpty(invoice.Status) && invoice.Status.Equals("Unpaid", StringComparison.OrdinalIgnoreCase);
                            var isPaid = !string.IsNullOrEmpty(invoice.Status) && invoice.Status.Equals("Paid", StringComparison.OrdinalIgnoreCase);

                            <tr data-invoice-id="@invoice.Id" data-created-at="@invoice.CreatedAt?.ToDateTime().ToString("yyyy-MM-ddTHH:mm:ss")">
                                <td>@invoice.ClientName</td>
                                <td>@invoice.Phone</td>
                                <td>@invoice.Email</td>
                                <td>@(invoice.CreatedAt?.ToDateTime().ToLocalTime().ToString("yyyy/MM/dd") ?? "N/A")</td>
                                <td>#@invoice.InvoiceNumber</td>
                                <td>
                                    <select class="status-dropdown" data-invoice-id="@invoice.Id">
                                        <option value="Unpaid" selected="@(isUnpaid)">Unpaid</option>
                                        <option value="Paid" selected="@(isPaid)">Paid</option>
                                    </select>
                                </td>


                                <td>
                                    <div class="td-actions">
                                        <a href="#" class="save-btn-payments text-success" data-invoice-id="@invoice.Id" title="Save Invoice">
                                            <img src="~/images/save_icon.png" alt="Save" class="operation-icons">
                                        </a>
                                        <a href="#" class="send-btn-payments text-success" data-invoice-id="@invoice.Id" title="Send Invoice">
                                            <img src="~/images/send_icon.png" alt="Send" class="operation-icons">
                                        </a>
                                        <a href="#" class="delete-btn-payments" title="Delete" data-invoice-id="@invoice.Id">
                                            <img src="~/images/delete_icon.png" alt="Delete" class="operation-icons">
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" style="text-align:center; padding:20px; font-weight:500; color:#999;">
                                "No Invoices Yet."
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
        </div>
    </main>

    <!-- filter Modal -->
    <div id="filterModal" class="modal-overlay" onclick="hideFilterModal()">
        <div class="filter-modal" onclick="event.stopPropagation()">
            <div class="modal-header">
                <h3 class="modal-title">Filter Invoices</h3>
                <button class="close-btn" onclick="hideFilterModal()">×</button>
            </div>
            <div class="filter-options">
                <div class="filter-option" onclick="applyFilter('alphabetical')">Alphabetical - A-Z</div>
                <div class="filter-option" onclick="applyFilter('date-newest')">Date Added - Newest to Oldest</div>
                <div class="filter-option" onclick="applyFilter('date-oldest')">Date Added - Oldest to Newest</div>
                <div class="filter-option" onclick="applyFilter('recent')">Recently Added</div>
                <div class="filter-option clear-filter" onclick="clearFilters()">Clear Filters</div>
            </div>
        </div>
    </div>

    <!-- Save confirmation modal -->
    <div id="saveModal" class="modal-overlay" style="display:none;">
        <div class="delete-modal" onclick="event.stopPropagation()">
            <button class="close-btn" onclick="hideSaveModal()">&times;</button>
            <div class="modal-header"><h3 class="modal-title">Save Invoice</h3></div>
            <p class="modal-message">Would you like to download this invoice as a PDF?</p>
            <div class="modal-actions">
                <button class="btn btn-success" id="confirmSaveBtn">Yes, Download</button>
                <button class="btn btn-secondary" onclick="hideSaveModal()">Cancel</button>
            </div>
        </div>
    </div>


    <!-- Share confirmation modal -->
    <div id="shareModal" class="modal-overlay" style="display:none;">
        <div class="delete-modal" onclick="event.stopPropagation()">
            <button class="close-btn" onclick="hideShareModal()">&times;</button>
            <div class="modal-header"><h3 class="modal-title">Send Invoice</h3></div>
            <p class="modal-message">Are you sure you want to send this invoice to the client?</p>
            <div class="modal-actions">
                <button class="btn btn-success" id="confirmShareBtn">Yes, Send</button>
                <button class="btn btn-secondary" onclick="hideShareModal()">Cancel</button>
            </div>
        </div>
    </div>


    <!-- Delete confirmation modal -->
    <div id="deleteModal" class="modal-overlay" style="display:none;">
        <div class="delete-modal" onclick="event.stopPropagation()">
            <button class="close-btn" onclick="hideDeleteModal()">&times;</button>
            <div class="modal-header"><h3 class="modal-title">Delete Invoice</h3></div>
            <p class="modal-message">Are you sure you want to delete this invoice?</p>
            <div class="modal-actions">
                <button class="btn btn-danger" id="confirmDeleteBtn">Yes</button>
                <button class="btn btn-secondary" onclick="hideDeleteModal()">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        // initial setup
        const tableBody = document.querySelector('.quotations-table tbody');
        const originalRows = Array.from(tableBody.querySelectorAll('tr')).map(r => r.cloneNode(true));

        // show or hide the filter modal
        function showFilterModal() {
            document.getElementById('filterModal').style.display = 'flex';
        }

        function hideFilterModal() {
            document.getElementById('filterModal').style.display = 'none';
        }

        // SEARCH FUNCTIONALITY
        const searchInput = document.querySelector('.search-input');
        searchInput?.addEventListener('input', function () {
            applySearchAndFilter(this.value.trim().toLowerCase());
        });

        // FILTER FUNCTIONALITY
        window.applyFilter = function (filterType) {
            currentFilter = filterType;
            applySearchAndFilter(searchInput?.value.trim().toLowerCase() || '');
            hideFilterModal();
        };

        window.clearFilters = function () {
            currentFilter = null;
            applySearchAndFilter('');
            hideFilterModal();
        };

        // tracking current filter
        let currentFilter = null;

        // search and filter
        function applySearchAndFilter(searchQuery) {
            let rows = originalRows.map(r => r.cloneNode(true))
                .filter(r => !r.querySelector('td[colspan]'));

            // applying the filter
            if (currentFilter) {
                switch (currentFilter) {
                    case 'alphabetical':
                        rows.sort((a, b) => {
                            const aName = a.querySelector('td:nth-child(1)').textContent.trim().toLowerCase();
                            const bName = b.querySelector('td:nth-child(1)').textContent.trim().toLowerCase();
                            return aName.localeCompare(bName);
                        });
                        break;
                    case 'date-newest':
                    case 'recent':
                        rows.sort((a, b) => new Date(b.dataset.createdAt) - new Date(a.dataset.createdAt));
                        break;
                    case 'date-oldest':
                        rows.sort((a, b) => new Date(a.dataset.createdAt) - new Date(b.dataset.createdAt));
                        break;
                }
            }

            // applying the search
            if (searchQuery) {
                rows = rows.filter(row => {
                    const clientName = (row.querySelector('td:nth-child(1)')?.textContent || '').toLowerCase();
                    const email = (row.querySelector('td:nth-child(3)')?.textContent || '').toLowerCase();
                    const invoiceNumber = (row.querySelector('td:nth-child(5)')?.textContent || '').toLowerCase();

                    return clientName.includes(searchQuery) || email.includes(searchQuery) || invoiceNumber.includes(searchQuery);
                });
            }

            // updating the table body
            tableBody.innerHTML = '';
            if (rows.length) {
                rows.forEach(r => tableBody.appendChild(r));
            } else {
                const colspan = tableBody.querySelector('tr td[colspan]')?.getAttribute('colspan') || 7;
                const noDataRow = document.createElement('tr');
                noDataRow.innerHTML = `<td colspan="${colspan}" style="text-align:center; padding:20px; font-weight:500; color:#999;">No matching invoices found.</td>`;
                tableBody.appendChild(noDataRow);
            }
        }

        // closing the model on escape
        document.addEventListener('keydown', function (event) {
            if (event.key === 'Escape') {
                hideFilterModal();
            }
        });

        tableBody.addEventListener("change", function(e) {
            const dropdown = e.target.closest(".status-dropdown");
            if (!dropdown) return;

            const invoiceId = dropdown.dataset.invoiceId;
            const newStatus = dropdown.value;

            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            const token = tokenInput ? tokenInput.value : '';

            fetch('/Invoices/UpdateStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                },
                body: JSON.stringify({
                    invoiceId: invoiceId,
                    status: newStatus
                })
            })
            .then(resp => {
                if (!resp.ok) throw new Error("Failed to update invoice status.");
                return resp.json();
            })
            .then(data => {
                alert("Invoice status updated successfully!");
            })
            .catch(err => {
                console.error(err);
                alert("Failed to update invoice status.");
            });
        });


        let selectedInvoiceIdForSave = null;

        // delegating events for the save buttons in the table
        tableBody.addEventListener('click', function (e) {
            const saveBtn = e.target.closest('.save-btn');
            if (!saveBtn) return;

            e.preventDefault();

            selectedInvoiceIdForSave = saveBtn.dataset.invoiceId;
            console.log("Selected Invoice ID:", selectedInvoiceIdForSave);

            if (!selectedInvoiceIdForSave) {
                alert("Invalid invoice ID.");
                return;
            }

            // showing the save confirmation modal
            document.getElementById('saveModal').style.display = 'flex';
        });

        // hiding the save modal
        function hideSaveModal() {
            document.getElementById('saveModal').style.display = 'none';
        }

        // save confirmation - download the invoice
        document.getElementById('confirmSaveBtn').addEventListener('click', async function () {
            if (!selectedInvoiceIdForSave) return alert("Invalid invoice ID.");

            try {
                const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                const token = tokenInput ? tokenInput.value : '';

                const payload = { InvoiceId: selectedInvoiceIdForSave };
                const response = await fetch('/Invoices/SaveInvoice', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                    const err = await response.json();
                    return alert(err.message || "Failed to download invoice.");
                }

                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `Invoice_${selectedInvoiceIdForSave}.pdf`;
                document.body.appendChild(a);
                a.click();
                a.remove();
                window.URL.revokeObjectURL(url);

                hideSaveModal();
            } catch (err) {
                console.error("Error downloading invoice:", err);
                alert("An error occurred while downloading the invoice.");
            } finally {
                selectedInvoiceIdForSave = null;
            }
        });

        let invoiceToShare = null;

        function showShareModal() {
            document.getElementById('shareModal').style.display = 'flex';
        }

        function hideShareModal() {
            document.getElementById('shareModal').style.display = 'none';
        }

        // click event delegation for share buttons
        tableBody.addEventListener('click', function (e) {
            const btn = e.target.closest('.send-btn, .send-btn *');
            if (!btn) return;

            e.preventDefault();
            const anchor = btn.closest('.send-btn');
            invoiceToShare = anchor?.dataset.invoiceId;
            if (!invoiceToShare) return;

            showShareModal();
        });

        // send confirmation
        document.getElementById('confirmShareBtn').addEventListener('click', async function () {
            if (!invoiceToShare) return;

            hideShareModal();

            try {
                const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                const token = tokenInput ? tokenInput.value : '';
                if (!token) {
                    alert('CSRF token not found. Cannot send invoice.');
                    return;
                }

                const resp = await fetch('@Url.Action("SendInvoice", "Invoices")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ InvoiceId: invoiceToShare })
                });

                const data = await resp.json();

                if (resp.ok && data && data.success) {
                    alert('Invoice successfully sent to the client.');
                } else {
                    alert(data.message || 'Failed to send invoice.');
                }
            } catch (err) {
                console.error(err);
                alert('Error sending invoice.');
            } finally {
                invoiceToShare = null;
            }
        });

        // closing the modal on escape key
        document.addEventListener('keydown', function (ev) {
            if (ev.key === 'Escape') hideShareModal();
        });


        let invoiceToDelete = null;

        function showDeleteModal() {
            document.getElementById('deleteModal').style.display = 'flex';
        }

        function hideDeleteModal() {
            document.getElementById('deleteModal').style.display = 'none';
        }

        // click event delegation for delete buttons
        tableBody.addEventListener('click', function (e) {
            const btn = e.target.closest('.delete-btn, .delete-btn *');
            if (!btn) return;

            e.preventDefault();
            const anchor = btn.closest('.delete-btn');
            invoiceToDelete = anchor?.dataset.invoiceId;
            if (!invoiceToDelete) return;

            showDeleteModal();
        });

        // delete confrimation
        document.getElementById('confirmDeleteBtn').addEventListener('click', async function () {
            if (!invoiceToDelete) return;

            try {
                const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                const token = tokenInput ? tokenInput.value : '';
                if (!token) {
                    alert('CSRF token not found. Cannot delete invoice.');
                    return;
                }

                const resp = await fetch('@Url.Action("DeleteInvoice", "Invoices")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ invoiceId: invoiceToDelete })
                });

                const data = await resp.json();

                if (resp.ok && data && data.success) {
                    const row = tableBody.querySelector(`tr[data-invoice-id="${invoiceToDelete}"]`);
                    if (row) row.remove();
                    alert('Invoice deleted successfully.');
                } else {
                    alert('Failed to delete invoice.');
                }
            } catch (err) {
                console.error(err);
                alert('Error deleting invoice.');
            } finally {
                hideDeleteModal();
                invoiceToDelete = null;
            }
        });

        document.addEventListener('keydown', function (ev) {
            if (ev.key === 'Escape') hideDeleteModal();
        });

    </script>
</body>
</html>