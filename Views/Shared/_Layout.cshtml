@*
    Layout: Quality Copiers Main Layout
    Author: Khanyi Mabuza
    Description: Main site layout with header, footer, and body rendering.
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quality Copiers</title>
    <link rel="icon" type="image/jpeg" href="~/images/logo2.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />


    @RenderSection("PageCss", required: false)
</head>

<body>
    <!-- Header -->
    <header>
        <nav class="custom-navbar d-flex justify-content-between align-items-center px-4">
            <!-- Left Links -->
            <div class="d-flex gap-4">
                <a asp-controller="Home" asp-action="Index"
                   class="nav-link-custom @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">Home</a>

                <a asp-controller="Home" asp-action="Services"
                   class="nav-link-custom @(ViewContext.RouteData.Values["action"]?.ToString() == "Services" ? "active" : "")">Services</a>

                <a asp-controller="Home" asp-action="Products"
                   class="nav-link-custom @(ViewContext.RouteData.Values["action"]?.ToString() == "Products" ? "active" : "")">Products</a>
            </div>

            <!-- Center Logo -->
            <div class="logo text-center">
                <img src="~/images/qualitycopiers_nav_logo.png" alt="Quality Copiers Logo" style="height: 50px;">
            </div>

            <!-- Right Links -->
            <div class="d-flex gap-4">
                <a asp-controller="Home" asp-action="About"
                   class="nav-link-custom @(ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")">About Us</a>

                <a asp-controller="Home" asp-action="Contact"
                   class="nav-link-custom @(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")">Contact</a>

                <a asp-controller="Account" asp-action="Login"
                   class="nav-link-custom @(ViewContext.RouteData.Values["action"]?.ToString() == "Login" ? "active" : "")">Sign In</a>
            </div>
        </nav>
    </header>


    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-container">
            <!-- Left Column -->
            <div class="footer-logo">
                <div class="logo-text-wrapper">
                    <img src="~/images/qualitycopiers_nav_logo_white.png" alt="Quality Copiers Logo" class="footer-logo-img" />
                </div>
                <br />
                <p class="logo-subtitle">Your trusted partner for professional <br />printing and copying solutions since 2007.</p>
            </div>

            <!-- Page Links -->
            <div class="footer-links">
                <a asp-controller="Home" asp-action="Index">Home</a>
                <a asp-controller="Home" asp-action="Services">Services</a>
                <a asp-controller="Home" asp-action="Products">Products</a>
                <a asp-controller="Home" asp-action="About">About Us</a>
                <a asp-controller="Home" asp-action="Contact">Contact</a>
            </div>

            <div class="footer-contact">
                <p>
                    <img src="~/images/location_icon.png" alt="Location Icon" class="footer-icon">
                    134 Victoria Rd, Southfield, 7800, Cape Town
                </p>
                <p>
                    <img src="~/images/phone1_icon.png" alt="Phone Icon" class="footer-icon">
                    +27 83 299 3890
                </p>
                <p>
                    <img src="~/images/phone2_icon.png" alt="Fax Icon" class="footer-icon">
                    +27 86 509 9116
                </p>
                <p>
                    <img src="~/images/mail_icon.png" alt="Email Icon" class="footer-icon">
                    info@qualitycopiers.co.za
                </p>
            </div>
        </div>

        <div class="footer-bottom">
            <p>&copy; @DateTime.Now.Year Quality Copiers. All rights reserved.<br /> Designed and developed by Elevate Digital Studios</p>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>