@*
    Layout: Quality Copiers Main Layout
    Author: Khanyi Mabuza
    Description: Main site layout with header, footer, and body rendering.
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quality Copiers</title>
    <link rel="icon" type="image/jpeg" href="~/images/logo2.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("PageCss", required: false)
</head>

<body>
    <!-- Header -->
    <header>
        <nav class="custom-navbar d-flex justify-content-between align-items-center px-4">
            <!-- Left Links -->
            <div class="d-flex gap-4">
                <a href="/" class="nav-link-custom">Home</a>
                <a href="/Home/Services" class="nav-link-custom">Services</a>
                <a href="/Home/Products" class="nav-link-custom">Products</a>
            </div>

            <!-- Center Logo -->
            <div class="logo text-center">
                <img src="~/images/logo.jpeg" alt="Quality Copiers Logo" style="height: 50px;">
            </div>

            <!-- Right Links -->
            <div class="d-flex gap-4">
                <a href="/Home/About" class="nav-link-custom">About Us</a>
                <a href="/Home/Contact" class="nav-link-custom">Contact</a>
                <a href="/Account/Login" class="nav-link-custom">Sign In</a>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-container">
            <!-- Left Column -->
            <div class="footer-logo">
                <div class="logo-text-wrapper">
                    <img src="~/images/logo2.png" alt="Quality Copiers Logo" class="footer-logo-img" />
                    <p class="logo-title">Quality Copiers</p>
                </div>
                <p class="logo-subtitle">Your trusted partner for professional printing and copying solutions since 2007.</p>
            </div>

            <!-- Page Links -->
            <div class="footer-links">
                <a asp-controller="Home" asp-action="Index">Home</a>
                <a asp-controller="Home" asp-action="Services">Services</a>
                <a asp-controller="Home" asp-action="Products">Products</a>
                <a asp-controller="Home" asp-action="About">About Us</a>
                <a asp-controller="Home" asp-action="Contact">Contact</a>
            </div>

            <!-- Contact Details -->
            <div class="footer-contact">
                <p>134 Victoria Rd, Southfield, 7800, Cape Town</p>
                <p>📞 +27 21 829 3819</p>
                <p>📠 +27 86 509 9966</p>
                <p>✉ info@qualitycopiers.co.za</p>
            </div>
        </div>

        <div class="footer-bottom">
            <p>&copy; @DateTime.Now.Year Quality Copiers. All rights reserved.</p>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>