                <button class="close-btn" onclick="hideFilterModal()">Ã—</button>
            </div>
            <div class="filter-options">
                <div class="filter-option" onclick="applyFilter('alphabetical')">Alphabetical - A-Z</div>
                <div class="filter-option" onclick="applyFilter('date-newest')">Date Added - Newest to Oldest</div>
                <div class="filter-option" onclick="applyFilter('date-oldest')">Date Added - Oldest to Newest</div>
                <div class="filter-option" onclick="applyFilter('recent')">Recently added</div>
            </div>
        </div>
    </div>

    <!-- add employee modal popup -->
    <div id="addEmployeeModal" class="modal-overlay" onclick="hideAddModal()">
        <div class="add-modal" onclick="event.stopPropagation()">
            <button class="close-btn" onclick="hideAddModal()">&times;</button>
            <div class="modal-header">
                <h3 class="modal-title">Add New Employee</h3>
            </div>
            <p class="modal-message"></p>
            <div class="modal-form">
            <form>
                <p class="form-label">Employee Name</p>
                <input type="text" class="form-input" placeholder="Jane Doe" required />
                <p class="form-label">Password</p>
                <input type="text" class="form-input" placeholder="**************" required />
                <p class="form-label">Mobile Number</p>
                <input type="text" class="form-input" placeholder="0123 456 789" required />
                <p class="form-label">Email</p>
                <input type="email" class="form-input" placeholder="jane.doe@gmail.com" required />
                <p class="form-label">Position</p>
                <input type="text" class="form-input" placeholder="Position" required />
                <button type="submit" class="btn-confirm">Confirm</button>
            </form>
            </div>
        </div>
    </div>

    <div id="logOuteModal" class="modal-overlay" onclick="showlogoOutModal()">
        <div class="logout-modal" onclick="event.stopPropagation()">
            <button class="close-btn" onclick="hidelogoOutModal()">&times;</button>
            <div class="modal-header">
                <h3 class="modal-title">Log Out</h3>
                
            </div>
            <p class="modal-message">Are you sure you would like to log out?</p>
            <div class="modal-actions">
                <button class="btn-confirm" onclick="confirmDelete()">Yes</button>
                <button class="btn-cancel" onclick="hideDeleteModal()">Cancel</button>
            </div>
        </div>
    </div>
    
    <!-- Added JavaScript for modal functionality -->
    <script>
        function showFilterModal() {
            document.getElementById('filterModal').style.display = 'flex';
        }
        
        function hideFilterModal() {
            document.getElementById('filterModal').style.display = 'none';
        }
        
        function applyFilter(filterType) {
            console.log('Applying filter:', filterType);
            // Add your filter logic here
            hideFilterModal();
        }

        function showDeleteModal() {
            document.getElementById('deleteModal').style.display = 'flex';
        }

        function hideDeleteModal() {
            document.getElementById('deleteModal').style.display = 'none';
        }

        function confirmDelete() {
            console.log("Employee deleted!");
            // ðŸ‘‰ Here you can call your backend delete logic
            hideDeleteModal();
        }   

        function showAddModal() {
            document.getElementById('addModal').style.display = 'flex';
        }

        function hideAddModal() {
            document.getElementById('addModal').style.display = 'none';
        }    

        function addEmployeeModal(){
            getElementById('addEmployeeModal').style.display = 'flex';
        }

        function hideEmployeeModal(){
            getElementById('addEmployeeModal').style.display = 'none';
        }

        function showlogoOutModal() {
            document.getElementById('logOuteModal').style.display = 'flex';
        }

        function hidelogoOutModal() {
            document.getElementById('logOuteModal').style.display = 'none';
        }
        
        // Close modal when pressing Escape key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                hideFilterModal();
            }
        });
    </script>
