@model INSY7315_ElevateDigitalStudios_POE.Models.Employee

@{
    ViewBag.Title = "Add Employee";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<link rel="stylesheet" href="~/css/dashboard.css" />

<div class="add-client-container">
    <div class="add-client-header">
        <h1>Add New Employee</h1>
        <p>Enter the employees information below to add them to your system.</p>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-warning">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    }

    <div class="add-client-form-container">
        <form asp-action="AddEmployees" asp-controller="Employees" method="post" class="add-client-form">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="IdNumber">ID Number *</label>
                <input asp-for="IdNumber" class="form-control" required pattern="\d{13}" title="ID Number must be exactly 13 digits" />
                <span asp-validation-for="IdNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name">Name *</label>
                <input asp-for="Name" class="form-control" required pattern="[A-Za-z\s]+" title="Only letters allowed" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Surname">Surname *</label>
                <input asp-for="Surname" class="form-control" required pattern="[A-Za-z\s]+" title="Only letters allowed" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email *</label>
                <input asp-for="Email" type="email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber">Phone Number *</label>
                <input asp-for="PhoneNumber" type="tel" class="form-control" required pattern="^\+?\d{10,15}$" title="Phone number must be 10-15 digits and can start with +" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <a class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Add Employee</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


