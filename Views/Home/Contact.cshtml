@{
    ViewData["Title"] = "Contact";
}

@section PageCss {
    <link rel="stylesheet" href="~/css/website.css" />
}
<section class="contact-hero">
    <!-- Left side: form on top of image -->
    <div class="contact-left-image">
        <div class="contact-form-container">
            <h1>Contact Us</h1>
            <h2>Get in Touch</h2>
            <h3>Send a message</h3>
            <p>
                Reach out to us for all your printer and copier needs. We're here to help!
            </p>

            <form asp-controller="Home" asp-action="SubmitContact" method="post" class="contact-form">
                <input type="text" name="Name" placeholder="Name" required />
                <input type="email" name="Email" placeholder="Email" required />
                <input type="number" name="number" placeholder="Phone Number" required />
                <input type="text" name="Service" placeholder="Service Needed" required />
                <textarea name="Message" placeholder="Message" rows="5" required></textarea>
                <button type="submit" class="btn-contact">Send</button>
            </form>
        </div>
    </div>

    <!-- Right black panel -->
    <div class="contact-right-panel">
        <h2>Contact Information</h2>
        <h3>Craig Diedricks</h3>
        <p>CEO</p>

        <h3>Address</h3>
        <p>134 Victoria Rd, Southfield, 7800, Cape Town</p>

        <h3>Phone</h3>
        <p>083 299 3890</p>

        <h3>Email</h3>
        <p>info@quaitycopiers.co.za</p>

        <h3>Business Hours</h3>
        <ul>
            <li>Monday - Friday: 8:00 AM - 5:00 PM</li>
            <li>Saturday: By appointment only</li>
            <li>Sunday: Closed</li>
        </ul>
        <h3>WhatsApp</h3>
        <a href="https://api.whatsapp.com/send/?phone=27832993890&text=Hi+Quality+Copiers%2C+I+would+like+to+inquire+about+your+services.&type=phone_number&app_absent=0" target="_blank" class="btn-whatsapp">
            Chat with us now!
        </a>
    </div>
</section>
